<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kwaterskip.ForecastController">
   <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="about" mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <HBox alignment="CENTER" spacing="10.0">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         <children>
            <Label fx:id="cityName" text="Milwaukee, US" style="-fx-font-size: 18px; -fx-text-fill: #444;" />
            <TextField fx:id="zipBar" onKeyPressed="#textSearch" promptText="Zip Code" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <TextField fx:id="countryBar" onKeyPressed="#textSearch" promptText="Country Code" style="-fx-font-size: 14px; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <Button mnemonicParsing="false" onAction="#search" text="Search" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         <children>
            <ImageView fx:id="weatherImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 10, 0, 0, 4);" />
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label fx:id="temp" style="-fx-font-size: 48px; -fx-text-fill: #444;" />
                        <Label text="°F" style="-fx-font-size: 36px; -fx-text-fill: #888;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label text="Feels Like: " style="-fx-font-size: 14px; -fx-text-fill: #444;" />
                        <Label fx:id="feelsLike" style="-fx-font-size: 14px; -fx-text-fill: #444;" />
                        <Label text="°F" style="-fx-font-size: 14px; -fx-text-fill: #888;" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label fx:id="weatherType" style="-fx-font-size: 24px; -fx-text-fill: #444;" />
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Wind Speed: " style="-fx-font-size: 14px; -fx-text-fill: #444;" />
                        <Label fx:id="windSpeed" style="-fx-font-size: 14px; -fx-text-fill: #444;" />
                        <Label text="MPH" style="-fx-font-size: 14px; -fx-text-fill: #888;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Humidity: " style="-fx-font-size: 14px; -fx-text-fill: #444;" />
                        <Label fx:id="humidity" style="-fx-font-size: 14px; -fx-text-fill: #444;" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>